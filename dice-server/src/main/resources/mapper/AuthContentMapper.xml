<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bihell.dice.mapper.auth.AuthContentMapper">

    <resultMap id="ResultMap" type="com.bihell.dice.model.auth.AuthContent">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="project_type" property="projectType" jdbcType="VARCHAR"/>
        <result column="content_type" property="contentType" jdbcType="VARCHAR"/>
        <result column="content_name" property="contentName" jdbcType="VARCHAR"/>
        <result column="content_value" property="contentValue" jdbcType="VARCHAR"/>

        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="creator" property="creator" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modifier" property="modifier" jdbcType="INTEGER"/>
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP"/>
        <result column="creator_name" property="creatorName" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="queryByParam" parameterType="com.bihell.dice.model.params.QueryParam" resultMap="ResultMap">
        SELECT t.*
        FROM auth_content t
        <where>
            t.status = 1
            <if test="queryParam.criteria != null and queryParam.criteria.length()>0">AND (t.content_name like concat("%",#{queryParam.criteria},"%"))</if>
            <if test="queryParam.projectType != null and queryParam.projectType.length()>0">AND t.project_type = #{queryParam.projectType}</if>
            <if test="queryParam.roleId != null">AND t.id in (select distinct content_id from auth_rel_role_content where role_id=#{queryParam.roleId} and status=1)</if>
        </where>
        ORDER BY t.id desc
    </select>


</mapper>
